<div class="flex flex-col items-center pt-24">
  <h1 class="font-bold text-4xl">Your Feed</h1>
  <p>View posts from your community</p>
  <div class="max-w-2xl w-full mx-auto flex-items-center justify-center">
    <%= link_to "Create a new post", new_post_path, class: "bg-gradient-to-br from-purple-500 to-pink-500 text-pink-50 p-2 rounded-lg hover:from-pink-500 hover:to-purple-500 hover:scale-105 transition-all-duration-250" %>
  </div>

  <div class="max-w-2xl w-full grid gap-8 mt-8">
    <%= render partial: "post", collection: @posts %>
  </div>
</div>
